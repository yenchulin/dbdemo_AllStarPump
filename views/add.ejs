                                <label>零件數量</label>
                                <input type="text" class="form-control" name="componentQuantity">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>模具借出時間</label>
                                <input type="text" class="form-control" name="lendOT">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>模具應歸還時間</label>
                                <input type="text" class="form-control" name="returnT">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>廠商名稱</label>
                                <input type="text" class="form-control" name="firmName">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>廠商負責人</label>
                                <input type="text" class="form-control" name="personIC">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>廠商電話</label>
                                <input type="text" class="form-control" name="phoneNo">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>廠商地址：</label>
                                <input type="text" class="form-control" name="address">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <input id="module" type="submit" value="送出&raquo;" />
            </form>
            </div>
