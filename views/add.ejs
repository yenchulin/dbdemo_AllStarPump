<% include ./header %>
    <div class=row>
        <div class=col-lg-3>
            <h2>模具</h2>
            <p style="color:red"><%=statusM %></p>
            <form action="/add/module" method="POST" novalidate>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>模具機型</label>
                        <input type="text" class="form-control" id="moduleId" name="moduleId">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>模具用途</label>
                        <input type="text" class="form-control" id="moduleUsage" name="moduleUsage">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>模具數量</label>
                        <input type="text" class="form-control" id="moduleQuantity" name="moduleQuantity">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>目前位置</label>
                        <input type="text" class="form-control" id="currentLocation" name="currentLocation">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <input type="submit" value="送出&raquo;" />
            </form>
        </div>
        <div class=col-lg-3>
