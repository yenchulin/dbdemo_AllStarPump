<% include ./header %>

    <div class=row>
        <div class=col-lg-4>
            <h2>模具</h2>
            <table border=1 bordercolor=#003366 width=900>
                <tr>
                    <th>模具機型</th>
                    <th>模具用途</th>
                    <th>模具數量</th>
                    <th>廠商A名稱</th>
                    <th>原有數量</th>
                    <th>刪除</th>
                </tr>
                <tr>
                    <form action="/moduleUpdate" method="POST">
                        <td>
                            <input type="hidden" name='moduleId' value=<%=module.moduleId %> />
                            <%= module.moduleId %>
                        </td>
                        <td>
                            <a href="#" id="moduleUsage" data-type="text">
                            <%= module.moduleUsage %>
                            </a>

                        </td>
                        <td>
                            <a href="#" id="moduleQuantity" data-type="text">
                                <%= module.moduleQuantity %>
                            </a>
                            <div style="display:none" id='hiddenForm' class="form-inline">

                                <div class="form-group">
                                    <input type="text" name="moduleQuantity" value=<%=module.moduleQuantity %> />
                                </div>
                                <button type="submit" class="btn btn-default">修改</button>

                                <button type="button" id="cancel" class="btn btn-default">取消</button>
                            </div>
                        </td>
                        <td>
                            <input type="hidden" name='acompanyName' value=<%=module.acompanyName %> />
                            <%= module.acompanyName %>
                        </td>
                        <td>
                            <input type="hidden" name='quantityOwned' value=<%=module.quantityOwned %> />
                            <%= module.quantityOwned %>
                        </td>
                    </form>
                    <td>刪除</td>
                </tr>
            </table>
        </div>
    </div>
