<% include ./header %>
    <div class=row>
        <div class=col-lg-4>
            <h2>廠商A</h2>
            <table border=1 bordercolor=#003366 width=1100>
                <tr>
                    <th>廠商名稱</th>
                    <th>零件代碼</th>
                    <th>零件名稱</th>
                    <th>零件數量</th>
                    <th>廠商A地址</th>
                    <th>電話號碼</th>
                    <th>負責人</th>
                    <th>模具借出時間</th>
